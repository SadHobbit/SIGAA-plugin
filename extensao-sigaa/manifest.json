{
  "manifest_version": 3,
  "name": "Melhora Horários SIGAA UFBA",
  "version": "1.1",
  "description": "Converte os códigos de horário e exibe uma grade com os horários selecionados.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Ver Horários Selecionados",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ufba.br/sigaa/graduacao/matricula/*"],
      "js": ["content.js"]
    }
  ]
}
